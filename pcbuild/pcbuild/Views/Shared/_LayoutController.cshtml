<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PCBuild.nl</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar-inverse {
            background-color: #FFFFFF;
            border-color: #00aeff;
        }

            .navbar-inverse .navbar-brand {
                color: #000000;
            }

                .navbar-inverse .navbar-brand:hover,
                .navbar-inverse .navbar-brand:focus {
                    color: #00aeff;
                    background-color: transparent;
                }

            .navbar-inverse .navbar-nav > li > a {
            }

                .navbar-inverse .navbar-nav > li > a:hover,
                .navbar-inverse .navbar-nav > li > a:focus {
                    color: #000000;
                    background-color: transparent;
                }

            .navbar-inverse .navbar-toggle .icon-bar {
                background-color: #00aeff;
            }

            .layout_controller_div{
                padding-left: 5%;
                padding-right: 5%;
                border-bottom: 1px solid #00aeff;
            }

            .layout_controller_nav{
                width:100%;
                padding: 0;
                margin-top: 15px;
                list-style-type: none;
                text-align:center;
                height: 25px;
            }

            .layout_controller_nav_li{
                float:left;
                width: 12.5%;
                color: black;
            }

            .layout_controller_nav_li:hover{
                color:#00aeff;
            }

    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PCBuild.nl", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="layout_controller_div">
        <ul class="layout_controller_nav">
            <a href="http://google1.com"><li class="layout_controller_nav_li">Processoren</li></a>
            <a href="http://google2.com"><li class="layout_controller_nav_li">Videokaarten</li></a>
            <a href="http://google3.com"><li class="layout_controller_nav_li">Moederborden</li></a>
            <a href="http://google4.com"><li class="layout_controller_nav_li">Intern geheugen</li></a>
            <a href="http://google5.com"><li class="layout_controller_nav_li">Hardeschijven</li></a>
            <a href="http://google6.com"><li class="layout_controller_nav_li">Behuizingen</li></a>
            <a href="http://google7.com"><li class="layout_controller_nav_li">Koeling</li></a>
            <a href="http://google8.com"><li class="layout_controller_nav_li">Overige</li></a>
        </ul>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PCBuild.nl</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
