@model IEnumerable<pcbuild.Models.MoederbordModels.ViewModelMoederbord>

@{
    ViewBag.Title = "Moederbord";
    Layout = "~/Views/Shared/_LayoutController.cshtml";
}

<h2>Moederbord</h2>

<table style="background-color:lightpink; border:solid 2px black;">
    <tr>
        <td>Naam</td>
        <td>socket</td>
        <td>vormfactor</td>
        <td>interfaces</td>
        <td>DDR</td>
        <td>Prijs</td>
        <td>url</td>
        <td>webshop</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Moederbord_all.naam</td>
            <td>@item.Moederbord_all.socket</td>
            <td>@item.Moederbord_all.vormfactor</td>
            <td>@item.Moederbord_all.interfaces</td>
            <td>@item.Moederbord_all.ddr</td>
            <td>@item.Verkrijgbaar_all.prijs</td>
            <td>@item.Verkrijgbaar_all.url</td>
            <td>@item.Webshop_all.naam</td>
            <td><a href='/Werkgeheugen/Index?ddr=@item.Moederbord_all.ddr'> KIES </a></td>
        </tr>
    }
</table>
<a href="@Url.Action("Index", "Videokaart")">
    <button id="Volgende_Stap3" type="button">Volgende Stap</button>
</a>