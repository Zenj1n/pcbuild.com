@model IEnumerable<pcbuild.Models.All_Components>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutController.cshtml";
}

<h2>Component</h2>

<table style="background-color:lightpink; border:solid 2px black;">
    <tr>
        <td>Naam</td>
        <td>Specs</td>
        <td>Link</td>
        <td>Prijs</td>
        <td>Webshop</td>
        <td>Component</td>
   </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.name</td>
            <td>@item.desc</td>
            <td>@item.url</td>
            <td>@item.price</td>
            <td>@item.webshop</td>
            <td>@item.component</td>
        </tr>
    }

